
<%= simple_form_for(@convention) do |f| %>
  <% if @convention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@convention.errors.count, "error") %> prohibited this convention from being saved:</h2>

      <ul>
      <% @convention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <strong> Start Date: </strong><input id="convention_start_date" type="text" class="datetime optional" name="convention[start_date]"><br>
  <strong> End Date: </strong><input id="convention_end_date" class="datetime optional" name="convention[end_date]"><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
jQuery('#convention_start_date').datetimepicker(
{
	format:'Y-m-d h:m:00'
});
jQuery('#convention_end_date').datetimepicker(
{
	format:'Y-m-d h:m:00'
});
</script>
