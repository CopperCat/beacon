</nav>
<div style="width: 90%; margin-right: 5%; float: right; height: 35px; top: 25%; border-bottom: 1px solid rgb(35, 47, 62);" class="row">
  <div class="col-xs-8" style="float: left; margin-right: 0px; padding-right: 0px; padding-left: 0px; top: 25%;">
    Browse Conventions
  </div>
  <div style="float: right; top: 25%;" class="col-xs-1">
  <a href="#search" data-rel="popup" class=""><i class="glyphicon glyphicon-search" aria-hidden="true"></i></a>
  </div>
  <div style="float: right; top: 25%;" class="col-xs-1">
  <a href="#sort" data-rel="popup" class=""><i class="glyphicon glyphicon-search" aria-hidden="true"></i></a>
  </div>
</div>

<% @conventions.each do |convention| %>
  <div style="width: 90%; float: left; margin-right:5%; margin-left: 5%; margin-top: 10px;" class="row">
    <div style="margin-left:0;padding:0;top: 25%;" class="col-xs-6">
   <img style="width:90%;height:70px;" src="http://1.bp.blogspot.com/-Zr0pmj1bLnM/Uhh7kROhGYI/AAAAAAAAGkE/W51xFS75-Ec/s1600/no-thumbnail.png">
    </div>
    <div class="col-xs-6" style="margin-left:0;padding:0;top: 25%;">
      <a href="home"> <p style="color:#DB001A;font-size:12px;line-height:1.3"><%= convention.name %></p></a><p style="font-size:9px;color:rgb(35, 47, 62);line-height:1.2;"><%= convention.start_date %> - <%= convention.end_date %><br>Location: N/A</p>
    </div>
  </div>
<% end %>

<div data-role="popup" id="search" data-position-to="window" class="ui-content" style="min-width:250px">
       <form method="post" action="demoform.asp">
        <div>
          <label for="usrnm" class="ui-hidden-accessible">Search:</label>
          <input type="text" name="user" id="usrnm" placeholder="Search">
          <input type="submit" data-inline="true" value="Search">
        </div>
      </form>
    </div>

<div data-role="popup" id="sort" data-position-to="window" class="ui-content" style="min-width:250px">
       <form method="post" action="demoform.asp">
        <div>
          <label for="usrnm" class="ui-accessible"style="padding:5px;">Name:</label>
<input type="radio" name="Name" value="Name">
          <label for="usrnm" class="ui-accessible">Place:</label>
<input type="radio" name="Location" value="Place" style="width:30%;">
          <label for="usrnm" class="ui-accessible">Time:</label>
<input type="radio" name="Time" value="time">
        </div>
      </form>
    </div>
  </div>


